<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddSmartTaskFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

        <TextView
                android:text="@string/specific_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/specific_title"
                android:textColor="@color/black" />

        <TextView
                android:text="@string/specific_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/specific_desc"
                android:textColor="@color/black"  />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="text here"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:ems="10"
                android:id="@+id/specific_edit_text"
                android:background="@drawable/enter_text_box_background" />

        <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

        <TextView
                android:text="@string/measurable_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/measurable_title"
                android:textColor="@color/black" />

        <CheckBox
                android:text="@string/measureable_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/measureable_checkBox" />

        <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

        <TextView
                android:text="@string/attainable_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/attainable_title"
                android:textColor="@color/black" />

        <CheckBox
                android:text="@string/attainable_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/attainable_checkBox" />

        <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

        <TextView
                android:text="@string/relevant_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/relevant_title"
                android:textColor="@color/black" />

        <CheckBox
                android:text="@string/relevent_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relevent_checkBox" />
        <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

        <TextView
                android:text="@string/time_based_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/time_based_title"
                android:textColor="@color/black" />

        <TextView
                android:text="@string/time_based_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/time_based_desc"
                android:textSize="14sp"
                android:layout_margin="10dp"
                android:textColor="@color/black"  />

        <TextView
                android:text="04/01/2021 @ 4:20 PM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center"
                android:id="@+id/end_date_tv"
                android:background="@drawable/enter_text_box_background"
                android:textSize="14sp"
                android:layout_margin="10dp"
                android:textColor="@color/black" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:text="@string/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_task_next_button"
                    android:textColor="@color/blue_500"
                    android:backgroundTint="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            <Button
                    android:text="Cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cancel_task_finish_button"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/red"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</ScrollView>