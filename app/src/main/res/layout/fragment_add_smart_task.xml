<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddSmartTaskFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/add_smart_nav"
            android:padding="10dp"
            android:orientation="vertical">


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="S"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:id="@+id/specific_title2"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            <TextView
                    android:text="@string/specific_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:id="@+id/specific_title"
                    android:textColor="?android:attr/textColorPrimary" />

            <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_margin="15dp" />

        </LinearLayout>

        <TextView
                android:text="@string/specific_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/specific_desc"
                android:textColor="?android:attr/textColorPrimary"
                android:textAlignment="center" />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="task description"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:ems="10"
                android:id="@+id/specific_edit_text"
                android:textAlignment="center"
                android:layout_gravity="center" />

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="M"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:id="@+id/measurable_title2"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textAlignment="textEnd" />

            <TextView
                    android:text="@string/measurable_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:id="@+id/measurable_title"
                    android:textColor="?android:attr/textColorPrimary" />

            <View
                    android:id="@+id/divider9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:layout_margin="15dp" />

        </LinearLayout>

        <CheckBox
                android:text="@string/measureable_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/measureable_checkBox"
                android:layout_gravity="center_horizontal" />

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:id="@+id/attainable_title2"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textAlignment="textEnd" />

            <TextView
                    android:text="@string/attainable_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:id="@+id/attainable_title"
                    android:textColor="?android:attr/textColorPrimary" />

            <View
                    android:id="@+id/divider10"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:layout_margin="15dp" />

        </LinearLayout>

        <CheckBox
                android:text="@string/attainable_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/attainable_checkBox"
                android:layout_gravity="center_horizontal" />

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="R"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:id="@+id/relevant_title2"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textAlignment="textEnd" />

            <TextView
                    android:text="@string/relevant_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:id="@+id/relevant_title"
                    android:textColor="?android:attr/textColorPrimary" />

            <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:layout_margin="15dp" />

        </LinearLayout>

        <CheckBox
                android:text="@string/relevent_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relevent_checkBox"
                android:layout_gravity="center_horizontal" />

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="T"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:id="@+id/time_based_title2"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textAlignment="textEnd" />

            <TextView
                    android:text="@string/time_based_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:id="@+id/time_based_title"
                    android:textColor="?android:attr/textColorPrimary" />

            <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:layout_margin="15dp" />

        </LinearLayout>

        <TextView
                android:text="@string/time_based_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/time_based_desc"
                android:textSize="14sp"
                android:layout_margin="10dp"
                android:textColor="?android:attr/textColorPrimary"
                android:textAlignment="center" />

        <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/enter_text_box_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="?android:attr/textColorPrimary"
                android:id="@+id/end_task_button">

            <TextView
                    android:text="04/01/2021"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:padding="5dp"
                    android:id="@+id/end_date_tv"
                    android:textSize="18sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:gravity="center" />

            <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/imageButton"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_calendar"
                    app:tint="@color/blue_500"
                    tools:ignore="VectorDrawableCompat" />
        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/add_smart_nav">

        <Button
                android:text="@string/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_task_next_button"
                android:textColor="@color/blue_500"
                android:backgroundTint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        <Button
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancel_task_finish_button"
                android:textColor="@color/white"
                android:backgroundTint="@color/red"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>