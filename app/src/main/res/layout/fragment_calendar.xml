<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CalendarFragment">

    <TextView
            android:text="April"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calendar_month_name_tv"
            android:textSize="20sp"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold" />

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
            android:id="@+id/compactcalendar_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/calendar_month_name_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:compactCalendarTargetHeight="0dp"
            app:compactCalendarTextSize="12sp"
            app:compactCalendarBackgroundColor="@color/white"
            app:compactCalendarTextColor="?android:attr/textColorPrimary"
            app:compactCalendarCurrentSelectedDayBackgroundColor="@color/blue_500"
            app:compactCalendarCurrentDayBackgroundColor="@color/blue_200"
            app:compactCalendarCurrentSelectedDayTextColor="@color/white"
            app:compactCalendarCurrentDayTextColor="@color/white"
            app:compactCalendarMultiEventIndicatorColor="#fff" />

</androidx.constraintlayout.widget.ConstraintLayout>